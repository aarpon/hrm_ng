<?xml version="1.0" encoding="UTF-8"?>
<database name="hrm" defaultIdMethod="native">
    <table name="user" phpName="User">
        <column name="id"             namespace="DB" type="integer"            required="true" primaryKey="true" autoIncrement="true"/>
        <column name="name"           namespace="DB" type="varchar" size="255" required="true" />
        <column name="password"       namespace="DB" type="varchar" size="255" required="true" />
        <column name="email"          namespace="DB" type="varchar" size="255" required="true" />
        <column name="research_group" namespace="DB" type="varchar" size="255" required="true" />
        <column name="role"           namespace="DB" type="varchar" size="255" required="true" />
        <column name="creation_date"  namespace="DB" type="date"    size="255" required="true" />
        <column name="last_access"    namespace="DB" type="date"    size="255" required="true" />
        <column name="status"         namespace="DB" type="varchar" size="1"   required="true" />
    </table>
</database>
